
<div class="container full-grid">
    <div class="row">
        <div class="col s12">
            <h1>GOT THEM CHEESEBURGERS</h1>
        </div>
    </div>
    <div class="row">
        <div class="col s12 m6">
            <h2>Burgers NOT Devoured</h2>
            <div class="row">
                <div class="col s12" id="burgers-not-devoured">
                    <ul>
                        {{#each burger}}
                            {{#unless devoured}}
                                {{> burger/burger-block devour=true}}
                            {{/unless}}
                        {{/each}}
                    </ul>

                </div>
            </div>

        </div>
        <div class="col s12 m6">
            <h2>Burgers Devoured!</h2>
            <div class="row">
                <div class="col s12" id="burgers-is-devoured">
                    <ul>
                        {{#each burger}}
                            {{#if devoured}}
                                {{> burger/burger-block devour=false}}
                            {{/if}}
                        {{/each}}
                    </ul>

                </div>
            </div>
            
        </div>
    </div>

    <div class="row">
        <form class="col s12">
            <div class="row">
                <div class="input-field col s8 m10">
                    <input class="validate" id="burger-name-input" type="text" placeholder="Burger name">
                </div>
                <div class="input-field col s2">
                    <a class="btn waves-light waves-effect" id="add-burger-btn">Add Burger</a>
                </div>
            </div>
        </form>
    </div>
</div>